<div class="container">
<div class="row">
  <div class="col-md-6 col-md-offset-3 box" >
    <div class="head">
      <div class="glyphicon glyphicon-calendar"></div>
      <%= project.name %>
      <%= link_to ('<i class="glyphicon glyphicon-pencil"></i>').html_safe, edit_project_path(project) %>
      <%= link_to ('<i class="glyphicon glyphicon-trash"></i>').html_safe, project, method: :delete, data: { confirm: "Are you sure?" }  %></br>
    </div>
    <div class="form">

      <%= form_for ([project, Task.new]) do |f| %>
        <i class="glyphicon glyphicon-plus"></i>
        <%= f.text_field :name, placeholder: "Start typing here to create a task..." %>
        <%= f.submit %>
      <% end %>
    </div>
    <div class="task-list">
      <%= render project.tasks %></br>
    </div>
    </div>
</div>
</div>
